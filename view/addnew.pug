extends layout

block content

  .main.container
    .row
      .col-md-6.col-md-offset-3
        if admin
          h1.display-4.m-b-2 Add Staff member
          form(method='POST' action='/addstaff')
            div.form-group
              label(for='name') Name:
              input#name.form-control(type='text', placeholder='first and last' name='name')
            div.form-group
              label(for='email') Email:
              input#email.form-control(type='email', placeholder='name@email.com' name='email')
            div.form-group
              label(for='phone') Phone Number:
              input#phone.form-control(type='text', placeholder='(555) 555-5555' name='phone')
            div.form-group
              label(for='pw') Password:
              input#pw.form-control(type='password' name='password')
            div.form-group
              label(for='pw2') Confirm Password:
              input#pw2.form-control(type='password' name='confirmPassword')
            div.form-group 
              label(for='admin') Staff Level:
                select(name='admin' id='admin')
                  option(value='true') Admin
                  option( value='false') Staff
            button.btn.btn-primary(type='submit') Add Staff
        h1.display-4.m-b-2 New Volunteer
        form(method='POST' action='/addvol')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='phone') Phone Number:
            input#phone.form-control(type='text', placeholder='(555) 555-5555' name='phone')
          div.form-group
            label(for='region') Region:
            input#region.form-control(type='text' name='region')
          div(style='display: none; visiblilty: hidden;').form-group
            label(for='parent') Parent Id:
            input#parent.form-control(type='text' name='parent' value=parent)
          button.btn.btn-primary(type='submit') Add Voluntter
